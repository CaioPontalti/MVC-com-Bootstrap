@model IEnumerable<PortalNoticias.Models.Noticia>

@{
    ViewBag.Title = "Notícias";
}


@foreach (var item in Model)
{
    <div class="panel panel-default">
        <div class="panel-heading">
            <p class="panel-title"><strong>@item.Titulo</strong></p>
        </div>
        <div class="panel-body">
            <p>@item.Conteudo.Substring(0, 100) ...</p>
        </div>
        <div class="btn-default">

        </div>
        <div class="panel-footer">
            @Html.ActionLink("Ler mais", "Detalhes", new { id = item.Id }, new { @class = "btn btn-default" })
        </div>
    </div>
}