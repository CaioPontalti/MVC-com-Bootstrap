@model IEnumerable<PortalNoticias.Models.Noticia>

@{
    ViewBag.Title = "Buscar";
}

@foreach (var @item in Model)
{

    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="panel-title"><strong>@item.Titulo</strong></div>
        </div>
        <div class="panel panel-body">
            <p>@item.Conteudo.Substring(0, 100) ...</p>
        </div>
        <div class="panel panel-footer">
            <div class="btn btn-default">
                @Html.ActionLink("Ler mais", "Detalhes", new { id = item.Id })
            </div>
        </div>
    </div>
}

@{
    if (Model.Count() == 0)
    {
        <p>Nenhuma notícia encontrada.</p>
        @Html.ActionLink("Voltar para home page", "Index", "Noticias")
    }
}

